extends layout

block content
    div.form
        h1 Registreer
        p Registreer om nieuwe topics te starten, vragen te stellen en om te reageren op gestelde vragen.
        ul.errors
            if errors
                each error, err in errors
                    li.alert.alert-danger #{error.msg}
        form(method='post', action='/users/register', enctype='multiparse/form-data')
            .form-group
                input.form-control(name='name', type='text', placeholder='Naam', value=locals.name)
            .form-group
                input.form-control(name='email', type='email', placeholder='E-mailadres' value=locals.email)
            .form-group
                input.form-control(name='username', type='text', placeholder='Gebruikersnaam' value=locals.username)
            .form-group
                input.form-control(name='password', type='password', placeholder='Wachtwoord')
            .form-group
                input.form-control(name='passwordRepeat', type='password', placeholder='Bevestig wachtwoord')
            .form-group
                label Profielfoto
                input.form-control(name='profileImage', type='file')
            input.btn.btn-default(class="btn-info" name='submit', type='submit', value='Registreer')